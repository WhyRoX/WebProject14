<main>
    <section>
        <div class="bioImage">
                            <img src="{{coach.coach_image}}"  height="800" width="auto" alt="">
        </div>
        <div id="containe-center"
        <div class="titre-bio-page">
            <h1>          La biographie de : {{coach.firstname}}</h1>
                        <h4>{{coach.bio }}</h4>

        </div>
        <div class="biotext">
                <div class="bioupdate">
       {{#if session.connected}}
        {{#if (eq session.user.status "coach")}}
                    <td><a href="/courts/update?court_id={{user_id}}" class="button-details">Mettre à jour</a></td>
        {{/if}}
        {{/if}}
        </div>
        </div>

        </div>
        </div>
        <br>

        
        <!-- Formulaire de contact modifié -->
        <div class="container" style="background: rgba(191, 213, 183, 0.63);">
            <h2>Contactez Notre Coach</h2>
            <form action="formulaire" method="POST">
                <div class="form-group">
                    <label for="coach">Sélectionnez Un coach :</label>
                    <select id="coach" name="coach" required>
                        <option value="" selected disabled>Sélectionnez Un coach</option>
                        <option value="pierre@example.com">Pierre</option>
                        <option value="jean@example.com">Jean</option>
                        <option value="marie@example.com">Marie</option>
                        <!-- Ajoutez d'autres options au besoin -->
                    </select>
                </div>
                <div class="form-group" >
                    <label for="objet">Objet :</label>
                    <input type="text" id="objet" name="objet" required>
                </div>
                <div class="form-group">
                    <label for="message">Message :</label>
                    <textarea id="message" name="message" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="jointure">Inclure une pièce jointe  :</label>
                    <input type="file" id="jointure" name="jointure">
                </div>
                <button class="bio-button" type="submit">Envoyer</button>
            </form>
        </div>
        <!-- Fin du formulaire de contact modifié -->
    </section>
</main>
